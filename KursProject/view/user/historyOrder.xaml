<Page x:Class="LightBooking.view.user.historyOrder"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LightBooking.view.user"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="historyOrder">

    <Grid>
        <StackPanel Margin="0,0,0,0">
            <TextBlock Margin="0,10,0,10" Foreground="#2196F4" FontSize="20" FontFamily="Roboto" FontWeight="DemiBold" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{DynamicResource hitoryOrder}"/>
            <DataGrid IsReadOnly="True" ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Auto" AutoGenerateColumns="False" x:Name="ListOrders" ItemsSource="{Binding list}">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="120" Header="{DynamicResource dateOrder}" Binding="{Binding date}" />
                    <DataGridTextColumn Width="100" Header="{DynamicResource timeOrder}" Binding="{Binding time}" />
                    <DataGridTextColumn Width="150" Header="{DynamicResource directFlight}" Binding="{Binding FLIGHT1.direction}" />
                    <DataGridTextColumn Width="150" Header="{DynamicResource dateFlight}" Binding="{Binding FLIGHT1.date}" />
                    <DataGridTextColumn Width="150" Header="{DynamicResource timeFlight}" Binding="{Binding FLIGHT1.time}" />
                    <DataGridTextColumn Width="120" Header="{DynamicResource nameDrive}" Binding="{Binding FLIGHT1.DRIVER.name}" />
                    <DataGridTextColumn Width="130" Header="{DynamicResource surnameDrive}" Binding="{Binding FLIGHT1.DRIVER.surname}" />
                    <DataGridTextColumn Width="130" Header="{DynamicResource carDrive}" Binding="{Binding FLIGHT1.DRIVER.number_car}" />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>
